@model IEnumerable<WebAppHotelManagement.ViewModel.RoomDetailsViewModel>


<table class="table table-hover mt-2">
    <thead class="thead-dark">
        <tr>
            <th>Action</th>
            <th>Room No.</th>
            <th>Room Image</th>
            <th>Room Price</th>
            <th>Booking Status</th>
            <th>Room Type</th>
            <th>Room Capacity</th>
            <th>Room Description</th>
        </tr>
    </thead>
    <tbody>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    <span id="btnDelete" style=" color: Tomato;" onclick="DeleteRoom(@item.RoomId)"><i class="fas fa-trash-alt"></i></span> &nbsp; &nbsp;
                    <span id="btnEdit"  onclick="EditRoom(@item.RoomId)"><i class="fas fa-pencil-alt"></i></span>

                </td>
                <td>
                    <img src="@Url.Content("~/RoomImages/" + item.RoomImage)" width="50" height="50" class="img-fluid" alt="Responsive image" />
                </td>
                <td>@item.RoomNumber</td>
                <td>@item.RoomPrice</td>
                <td>@item.BookingStatus</td>
                <td>@item.RoomType</td>
                <td>@item.RoomCapacity</td>
                <td>@item.RoomDescription</td>
            </tr>
        }



    </tbody>
</table>
